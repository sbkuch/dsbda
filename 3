import pandas as pd

# Step 1: Load the dataset
df = pd.read_csv("C:/Users/aasth/OneDrive/Desktop/DSBDA/Employee_Salary_Dataset.csv")

# Group salary statistics by Gender
grouped_stats = df.groupby('Gender')['Salary'].agg(['mean', 'median', 'min', 'max', 'std'])

# Display summary statistics
print("ðŸ“Š Salary Statistics Grouped by Gender:")
print(grouped_stats)

# Create a list of salaries for each gender
salary_list = df.groupby('Gender')['Salary'].apply(list)
print("\nðŸ“‹ Salary values per gender:")
print(salary_list)

# Load dataset
iris = pd.read_csv("C:/Users/aasth/OneDrive/Desktop/DSBDA/Iris.csv")

# View column names
print("Columns in the dataset:", iris.columns)

# Group and summarize by actual species column
for species in iris['Species'].unique():
    print(f"\nðŸ“ˆ Statistics for {species}:")
    species_data = iris[iris['Species'] == species]
    print(species_data.describe())
